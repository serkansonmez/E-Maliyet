                                }).then(function () {
                                    workbook.xlsx.writeBuffer().then(function (buffer) {
                                        saveAs(new Blob([buffer], { type: "application/octet-stream" }), "Borçlu Vade Analizi.xlsx");
                                    });
                                });
                                e.cancel = true;
                            }
                        });





                    })
